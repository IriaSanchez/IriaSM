<Window x:Class="ApiPrueba.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApiPrueba"
        mc:Ignorable="d"
        
        Title="El Ejercito De Dumbledore" Height="1200" Width="900">

    <ScrollViewer VerticalScrollBarVisibility="Visible">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>


            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" >

                <TextBlock 
                   TextWrapping="Wrap" Text="EL EJÉRCITO DE DUMBLEDORE" 
                   TextAlignment="Right"
                   Margin="0,10,0,0"
                   FontSize="30" FontWeight="Bold" 
                   Foreground="Red"  />

                <Label Name="lbBuscar" Margin="0,0,0,0" Content="Escribe el personaje que deseas mostrar" FontSize="55"/>



                <TextBox
                Name="SearchBox"              
                Grid.Row="0" Grid.Column="0"
                TextAlignment="Left"
                Margin="10,10,0,0"                
                FontSize="20">
                Escribe aqui...
            </TextBox>

            <Button 
                Content="Search"
                Name="btBuscar" 
                Click="btBuscar_Click"
                Grid.Row="0" Grid.Column="0"
                Margin="0,10,0,50"
                Width="440"
                Height="35">
            </Button>

    
             

            </StackPanel>

            <!--HARRY-->

            <Button 
                Visibility="Collapsed"
                Grid.Row="2" Grid.Column="0" 
                Name="btHarry" 
                Content="Harry Potter" 
                FontSize="20" 
                Background="Black" Foreground="Red" 
                Margin="75,0,75,5"
                Click="btNombre_Click"/>


            <StackPanel Visibility="Collapsed" Margin="45" Grid.Row="2" Grid.Column="1" >

            <TextBlock  Name="tbApodoHarry" Text=""  FontSize="25" Foreground="Red"/>
            <TextBlock  Name="tbCasaHarry" Text=""  FontSize="25" Foreground="Red"/>
            <TextBlock  Name="tbActorHarry" Text=""  FontSize="25" Foreground="Red"/>


        </StackPanel>


        <!--HERMIONE POSICION 1-->

        <Button
            Visibility="Collapsed"
			Grid.Row="3" Grid.Column="0"
			Name="btHermione"
			Content="Hermione Granger"
			FontSize="20"
			Background="Black" Foreground="Red"
			Click="btHermioneClick" Margin="75,19,75,19"/>



            <StackPanel Visibility="Collapsed" Margin="45" Grid.Row="3" Grid.Column="1" >

            <TextBlock  Name="tbApodoHermione" Text=""  FontSize="25" Foreground="Red"/>
            <TextBlock  Name="tbCasaHermione" Text=""  FontSize="25" Foreground="Red"/>
            <TextBlock  Name="tbActorHermione" Text=""  FontSize="25" Foreground="Red"/>

        </StackPanel>

        <!--RON POSICION 2-->

        <Button Grid.Row="4" Grid.Column="0" 
                Visibility="Collapsed"
                Name="btRon" 
                Content="Ron Weasley" 
                FontSize="20" 
                Background="Black" Foreground="Red" 
                Click="btRonClick" Margin="75,21,75,22"/>




            <StackPanel Visibility="Collapsed" Margin="45" Grid.Row="4" Grid.Column="1" >

            <TextBlock  Name="tbApodoRon" Text=""  FontSize="25" Foreground="Red"/>
            <TextBlock  Name="tbCasaRon" Text=""  FontSize="25" Foreground="Red"/>
            <TextBlock  Name="tbActorRon" Text=""  FontSize="25" Foreground="Red"/>

        </StackPanel>

        <!--GINNY POSICION 8-->

        <Button Grid.Row="5" Grid.Column="0" 
                Visibility="Collapsed"
                Name="btGinny" 
                Content="Ginny Weasly" 
                FontSize="20" 
                Background="Black" Foreground="Red" 
                Click="btGinnyClick" Margin="75,21,75,21"/>


            <StackPanel Visibility="Collapsed" Margin="45" Grid.Row="5" Grid.Column="1" >

            <TextBlock  Name="tbApodoGinny" Text=""  FontSize="25" Foreground="Red"/>
            <TextBlock  Name="tbCasaGinny" Text=""  FontSize="25" Foreground="Red"/>
            <TextBlock  Name="tbActorGinny" Text=""  FontSize="25" Foreground="Red"/>

        </StackPanel>

        <!--NEVILLE POSICION 11-->

        <Button Grid.Row="6" Grid.Column="0" 
                Visibility="Collapsed"
                Name="btNeville" 
                Content="Neville Longbottom" 
                FontSize="20" 
                Background="Black" Foreground="Red" 
                Click="btNevilleClick" Margin="75,21,75,21"/>



            <StackPanel Visibility="Collapsed" Margin="45" Grid.Row="6" Grid.Column="1" >

            <TextBlock  Name="tbApodoNev" Text=""  FontSize="25" Foreground="Red"/>
            <TextBlock  Name="tbCasaNev" Text=""  FontSize="25" Foreground="Red"/>
            <TextBlock  Name="tbActorNev" Text=""  FontSize="25" Foreground="Red"/>

        </StackPanel>



        <!--LUNA POSICION 12-->

        <Button Grid.Row="7" Grid.Column="0" 
                Visibility="Collapsed"
                Name="btLuna" 
                Content="Luna Lovegood" 
                FontSize="20" 
                Background="Black" Foreground="Red" 
                Click="btLunaClick" Margin="75,21,75,21"/>



            <StackPanel Visibility="Collapsed"  Margin="45" Grid.Row="7" Grid.Column="1" >

            <TextBlock  Name="tbApodoLuna" Text=""  FontSize="25" Foreground="Red"/>
            <TextBlock  Name="tbCasaLuna" Text=""  FontSize="25" Foreground="Red"/>
            <TextBlock  Name="tbActorLuna" Text=""  FontSize="25" Foreground="Red"/>

        </StackPanel>

    </Grid>
    </ScrollViewer>

</Window>
