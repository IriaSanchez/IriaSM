<Window x:Class="SimulacroWPF2.Ejercicio2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimulacroWPF2"
        mc:Ignorable="d"
        Title="Ejercicio2" Height="450" Width="800">
    <Grid>

        <!--Check por defecto-->
        <StackPanel>
            <Label Name="lb_ej2" Foreground="Red">EJERCICIO 2</Label>
            <CheckBox Name="cb_hugo" Content="Nombre" IsChecked="True" Click="cb_hugo_Click"/>
            <CheckBox Name="cb_diaz" Content="Apellido" IsChecked="True" Click="cb_diaz_Click"/>
            
            <!--Labels en un stack con orientacion horizontal para que apilen los label seguidos-->
            <StackPanel Orientation="Horizontal">
                <Label Name="lb_hugo">Hugo</Label>
                <Label Name="lb_diaz">Díaz</Label>
            </StackPanel>
            
        </StackPanel>

    </Grid>
</Window>
