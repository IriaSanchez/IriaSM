<Window x:Class="WPFPrueba.FScrollViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFPrueba"
        mc:Ignorable="d"
        Title="FScrollViewer" Height="450" Width="800">

    <Grid Margin="10,50,70,40">
    <ScrollViewer HorizontalScrollBarVisibility="Auto"  VerticalScrollBarVisibility="Auto" Margin="0,61,0,-321">
        
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
            
            <TextBlock Text="Redimensiona y prueba" TextWrapping="Wrap" Margin="0,0,0,20"/>
            <Rectangle Fill="Red" Width="500" Height="500"></Rectangle>
            
            <Button Content="HOLA" Padding="0,0,0,0" Visibility="Collapsed"/>
            <Button Content="HOLA2" Padding="0,0,0,0" Visibility="Visible"/>
            <Button Content="HOLA3" Padding="0,0,0,0" Visibility="Hidden"/>
            <Button Content="HOLA4" Padding="0,0,0,0" Visibility="Visible"/>

            </StackPanel>
        
    </ScrollViewer>
    </Grid>
</Window>
