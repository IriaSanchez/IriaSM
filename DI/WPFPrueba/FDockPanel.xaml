<Window x:Class="WPFPrueba.FDockPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFPrueba"
        mc:Ignorable="d"
       Title="WPFPrueba" Height="500" Width="900" >
    
       
    <Grid>
        <DockPanel>
            <Button DockPanel.Dock="Bottom" Height="50" Content="Abajo"/>
            <Button DockPanel.Dock="Top" Height="100" Content="Arriba"/>
            <Button DockPanel.Dock="Left" Width="150" Content="Izquierda"/>
            <Button DockPanel.Dock="Right" Width="100" Content="Derecha"/>
            <Button Content="Centro"/>
        </DockPanel>
        
    </Grid>
</Window>
