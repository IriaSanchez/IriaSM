<Window x:Class="WPFExamen.EJERCICIO4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFExamen"
        mc:Ignorable="d"
        Title="EJERCICIO4" Height="450" Width="800">
    <StackPanel>
        <ComboBox Name="cb1_Ejercicio4" SelectionChanged="cb1_Ejercicio4_SelectionChanged">
            <ComboBoxItem>Colores</ComboBoxItem>
            <ComboBoxItem>Números</ComboBoxItem>
        </ComboBox>

        <ComboBox Name="cb2_Ejercicio4">


            <ComboBoxItem Content="Blanco" Tag="Color"/>
            <ComboBoxItem Content="Negro" Tag="Color"/>
            <ComboBoxItem Content="Rojo" Tag="Color"/>

            <ComboBoxItem Content="1" Tag="Numero"/>
            <ComboBoxItem Content="2" Tag="Numero"/>
            <ComboBoxItem Content="3" Tag="Numero"/>

        </ComboBox>
        

    </StackPanel>
</Window>
